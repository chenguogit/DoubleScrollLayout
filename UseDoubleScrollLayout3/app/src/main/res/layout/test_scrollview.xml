<?xml version="1.0" encoding="utf-8"?>
<dream.use_doublescrolllayout.view.DoubleScrollLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/double_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <dream.use_doublescrolllayout.view.RefreshHeadLayout
        android:id="@+id/refresh_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/drag_update_layout"/>
    </dream.use_doublescrolllayout.view.RefreshHeadLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:textSize="32sp"
        android:text="头部"
        android:background="#8f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test_btn"/>

        <dream.use_doublescrolllayout.view.InnerScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="100dp"
                    android:gravity="center_horizontal"
                    android:textSize="36sp"
                    android:text="test1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="100dp"
                    android:gravity="center_horizontal"
                    android:textSize="36sp"
                    android:text="test2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="100dp"
                    android:gravity="center_horizontal"
                    android:textSize="36sp"
                    android:text="test3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="100dp"
                    android:gravity="center_horizontal"
                    android:textSize="36sp"
                    android:text="test4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="100dp"
                    android:gravity="center_horizontal"
                    android:textSize="36sp"
                    android:text="test5"/>
            </LinearLayout>
        </dream.use_doublescrolllayout.view.InnerScrollView>
    </LinearLayout>
</dream.use_doublescrolllayout.view.DoubleScrollLayout>
